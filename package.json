{
    "name": "@trendyol-js/grace",
    "description": "Trendyol Grace - Component Design",
    "main": "dist/grace.js",
    "module": "dist/grace.js",
    "files": [
        "dist/",
        ".prettierrc.json",
        ".eslintrc.json"
    ],
    "author": {
        "name": "Trendyol Tech",
        "url": "https://github.com/Trendyol"
    },
    "license": "BSD-3-Clause",
    "scripts": {
        "prestart": "npm run prep",
        "start": "npm run storybook:dev:watch",
        "prep": "npm-run-all -s prep:*",
        "prep:component-list": "wca analyze 'src/components/**/!(*.stories|*.lit|*.test).ts' --features --format json --outFile ./src/component-list.json",
        "prep:custom-elements": "wca analyze 'src/components/**/!(*.stories|*.lit|*.test).ts' --format json --outFile ./src/custom-elements.json",
        "prep:assets": "node scripts/bundle-assets.js",
        "prebuild": "npm run prep",
        "build": "npm-run-all -s build:tsc build:rollup",
        "build:tsc": "npm run tsc",
        "build:rollup": "npm run rollup",
        "build:watch": "npm-run-all -p -r tsc:watch rollup:watch",
        "tsc": "tsc",
        "tsc:watch": "tsc --watch",
        "rollup": "npm run rollup:bundle",
        "rollup:bundle": "rollup -c -m",
        "rollup:watch": "npm run rollup -w",
        "wds": "wds --app-index dev/index.html --open dev/ --watch --node-resolve",
        "preserve": "npm run prep",
        "serve": "npm-run-all -p -r build:watch wds",
        "storybook:axe:prod": "npm run storybook:prod && npm run axe-storybook --build-dir=storybook-static/",
        "storybook:axe:dev": "npm-run-all -s storybook:axe:dev:chromium storybook:axe:dev:firefox",
        "storybook:axe:dev:chromium": "npm run axe-storybook --storybook-address=\"http://localhost:1994\" --browser chromium",
        "storybook:axe:dev:firefox": "npm run axe-storybook --storybook-address=\"http://localhost:1994\" --browser firefox",
        "storybook:axe:dev:webkit": "npm run axe-storybook --storybook-address=\"http://localhost:1994\" --browser webkit",
        "storybook:dev": "start-storybook -p 1994",
        "storybook:dev:watch": "npm-run-all -p -r watch:css storybook:dev",
        "storybook.prod": "npm run storybook:prod",
        "storybook:prod": "npm run prep && npm run storybook:wait && NODE_ENV=production build-storybook -o storybook-static",
        "lint": "npm-run-all -s lint:*",
        "lint:eslint": "eslint .",
        "lint.eslint": "npm run lint:eslint",
        "lint:tsc": "tsc --noEmit",
        "lint:prettier": "prettier --check .",
        "lint.prettier": "npm run lint:prettier",
        "format": "npm-run-all -s format:code format:svg",
        "format:code": "eslint --fix . && prettier --write .",
        "format:svg": "svgo -f ./src -r --config=svgo.config.js",
        "fix": "npm run fmt && npm run lint",
        "ci": "rm -rf node_modules && npm install --frozen-lockfile",
        "clean": "npm-run-all -s clean:*",
        "clean:dist": "rimraf dist",
        "clean:generated": "rimraf src/custom-elements.json && rimraf src/component-list.json",
        "clean:storybook": "rimraf storybook-static",
        "clean:css": "rimraf src/**/*.lit.ts",
        "clean:modules": "rimraf node_modules",
        "reset": "npm run clean && npm install",
        "reboot": "npm run clean && npm install && npm start",
        "test": "npm run build && wtr",
        "prepare": "husky install"
    },
    "keywords": [
        "web-components",
        "typescript",
        "lit"
    ],
    "dependencies": {
        "@types/estree": "0.0.47",
        "lit": "^2.0.0"
    },
    "engines": {
        "node": ">=14"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.14.2",
        "@babel/preset-flow": "^7.16.7",
        "@chanzuckerberg/axe-storybook-testing": "^5.0.0",
        "@commitlint/cli": "^13.2.0",
        "@commitlint/config-conventional": "^13.2.0",
        "@open-wc/testing": "^3.0.0-next.2",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-multi-entry": "^4.0.0",
        "@rollup/plugin-replace": "^2.4.2",
        "@storybook/addon-a11y": "^6.4.19",
        "@storybook/addon-actions": "^6.4.19",
        "@storybook/addon-essentials": "^6.4.19",
        "@storybook/addon-links": "^6.4.19",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/builder-webpack5": "^6.4.19",
        "@storybook/manager-webpack5": "^6.4.19",
        "@storybook/web-components": "^6.4.19",
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^4.0.0",
        "@web/dev-server": "0.0.29",
        "@web/dev-server-legacy": "^0.1.4",
        "@web/test-runner": "^0.13.15",
        "@web/test-runner-browserstack": "^0.4.2",
        "@web/test-runner-playwright": "^0.8.6",
        "@webcomponents/webcomponentsjs": "^2.5.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.2",
        "babel-plugin-named-exports-order": "^0.0.2",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-react": "^7.23.0",
        "gaze": "^1.1.3",
        "husky": "^7.0.4",
        "jest": "^26.6.3",
        "jest-cli": "^26.6.3",
        "lint-staged": "^10.5.4",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.4",
        "postcss-cli": "^8.3.1",
        "postcss-custom-properties": "^11.0.0",
        "postcss-discard-comments": "^5.1.0",
        "postcss-import": "^14.0.2",
        "postcss-lit": "^0.4.3",
        "postcss-loader": "^5.2.0",
        "postcss-nested": "^5.0.6",
        "postcss-preset-env": "^7.0.0",
        "prettier": "^2.0.4",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.46.0",
        "rollup-plugin-summary": "^1.3.0",
        "rollup-plugin-svg": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.2",
        "rsync": "^0.6.1",
        "storybook": "^6.4.19",
        "stylelint": "^14.6.1",
        "stylelint-config-recommended": "^7.0.0",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "svgo": "^2.7",
        "ts-lit-plugin": "^1.2.1",
        "typescript": "^4.0.0",
        "wait-on": "^5.3.0",
        "web-component-analyzer": "^1.0.3",
        "webpack": "^5.38.1"
    },
    "lint-staged": {
        "**/*.{js,,ts,}": [
            "npx prettier --write",
            "npx eslint --fix",
            "npx stylelint --fix src/components/**/*.styles.ts"
        ]
    }
}
